{% extends 'layout.html.twig' %}

{% block title %}Mot de passe{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if form_errors(passwordForm.newPassword.first) %}
<div class="alert alert-danger">
    {{ form_errors(passwordForm.newPassword.first) }}
</div>
{% endif %}

<div class="well">
{{ form_start(passwordForm, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="form-group">
        {{ form_label(passwordForm.oldPassword, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_errors(passwordForm.oldPassword) }}
            {{ form_widget(passwordForm.oldPassword, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(passwordForm.newPassword.first, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(passwordForm.newPassword.first, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(passwordForm.newPassword.second, null, { 'label_attr':  {
            'class': 'col-sm-5 control-label'
        }}) }}
        <div class="col-sm-4">
            {{ form_widget(passwordForm.newPassword.second, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-3">
            <input type="submit" class="btn btn-primary" value="Modifier" />
        </div>
    </div>
{{ form_end(passwordForm) }}
</div>
{% endblock %}